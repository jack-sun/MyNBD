<%
=begin
Parameters:
	articles: Array
	html_style: String (optional)
=end
html_style = '' unless html_style
%>
<div id="releatedFeatures" class="sectionA featureList" style="<%=html_style%>">
	<div class="title">
		<h3>相关专题</h3>
	</div>
	<div class="content">
		<ul>
			<% articles.each_with_index do |article, index|%>
				<li <%if index == articles.length-1%>class="last"<%end%> >
					<h3 class='fTitle'>
						<%= link_to article.list_title, article_url(article), {:target => "_blank"} %>
					</h3>
					<%= link_to image_tag(article_thumbnail_path(article, :large_b)), article_url(article), :class => "fImageLink" if article.image.present? %>
					
					<p class="fDigest" >
						<%= truncate(article.show_digest, :length => 60) %>
					</p>
				</li>
			<% end %>
		</ul>
		<div class="clear"></div>
	</div>
</div>
