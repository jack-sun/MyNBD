<div class="tzbPromo mts mbm f12">
	<div class="hd">
    <a href="<%= Touzibao::TOUZIBAO_INTRODUCE_URL %>" class="b" target="_blank">每经投资宝·精彩推荐</a>
	</div>
	<div class="bd">
    <div id="tzbPromoIndex">
    	<div class="tzbPromoIndexBox rf">
	    	<a href="javascript:void(0)">1</a>
	    	<a href="javascript:void(0)">2</a>
	    	<a href="javascript:void(0)">3</a>
    	</div>
    </div>
    <div id="tzbPromoContainer">
      <% cache(column_show_content_key_by_id(Column::TOUZIBAO_CASE_COLUMN)) do %>
        <% @touzibao_latest_cases.each do |touzibao_case| %>
          <%= link_to truncate(touzibao_case.show_digest, :length => 100), Touzibao::TOUZIBAO_INTRODUCE_URL, {:target => "_blank"} %>
        <%end%>
      <% end %>
    </div>

	</div>
</div>

<script type="text/javascript">
	$(function(){
		$.nbdslide.init({
			optDOMs:["#tzbPromoContainer"],
			indexDOM:"#tzbPromoIndex div",
			style:"slide-x",
			interval:8000
		});
	});
</script>
