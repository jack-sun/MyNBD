<% @title="智库频道" %>
<%= require_css "channel.css" %>
<%= require_slideShow %>

<% content_for :header_ad do %>
	<script type="text/javascript">
		BAIDU_CLB_preloadSlots("349118","349119","349120");
	</script>
	<!-- 广告位：全站_顶部四分之三通栏 -->
	<%= render :partial => "ads/ad", :locals => { :id => "349118", :html_class => "header" } %>
<% end %>
<% cache(column_sub_nav_key_by_id(params[:id])) do%>
<%= render :partial => "columns/sub_navigation", :locals => {:column_id => 56 } %>
<% end %>
<div class="leftCol">
  <% cache(column_show_content_key_by_id(@head_article[:id])) do %>
  	<%= render :partial => "columns/scroll_head_article", :locals => { :articles => @head_article[:articles].map(&:article).compact, :column_id => 57 } %>
  <% end %>
	<div class="subLeftCol">
		
      	<% cache(column_show_content_key_by_id(@column[:id])) do %>
		<%= render :partial => "columns/article_list", :locals => {:list_title => "专栏", :articles => @column[:articles].map(&:article).compact, :column_id => 58, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
      	<% end %>
      	
      	<% cache(column_show_content_key_by_id(@note[:id])) do %>
      		<%= render :partial => "columns/article_list", :locals => {:list_title => "记者手记", :articles => @note[:articles].map(&:article).compact, :column_id => 60, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
      	<% end %>
      
	</div>
	<div class="subRightCol">
        
        <% cache(column_show_content_key_by_id(@comment[:id])) do %>
        <%= render :partial => "columns/article_list", :locals => {:list_title => "评论", :articles => @comment[:articles].map(&:article).compact, :column_id => 59, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
        <% end %>
        
    	<% cache(column_show_content_key_by_id(@blog[:id])) do %>
    	<%= render :partial => "columns/article_list", :locals => {:list_title => "博客推荐", :articles => @blog[:articles].map(&:article).compact, :column_id => 88, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
    	<% end %>
    	
	</div>
	<div class="clear"></div>
</div>
<div class="rightCol">
  
  <% cache(column_show_content_key_by_id(@nbd_weekly_comment[:id], true, "uniq")) do %>
  <%= render :partial => "columns/one_word", :locals => { :article => @nbd_weekly_comment[:articles].map(&:article).compact[0] }%>
  <% end %>
  
  <div class="divider" style="margin-bottom:5px;"></div>
  
  <% cache(column_show_content_key_by_id(@yetan_column[:id], true, "uniq")) do %>
  <%= render :partial => "columns/column_article_list", :locals => {:list_title => "叶檀每日评", :articles => @yetan_column[:articles].map(&:article).compact, :column_id => 89, :display_children => false, :digest_restrict => true } %>
  <% end %>
  
	<!-- 广告位：全站_右边栏一 -->
	<%= render :partial => "ads/ad", :locals => { :id => "349119", :html_class => "right_box" } %>
  
  
        <%= render :partial => "columns/hot_articles" %>
  	<%= render :partial => "columns/nbd_promo", :locals => {:hide_newspappers => true, :title => "移动客户端"} %>
	<div class="divider" style="margin-bottom:10px"></div>
  
  <%= render :partial => "columns/subscription", :locals => {:html_style => ""} %>
</div>
<div class="clear"></div>

<!-- 广告位：全站_底部通栏 -->
<%= render :partial => "ads/ad", :locals => { :id => "349120", :html_class => "footer" } %>
