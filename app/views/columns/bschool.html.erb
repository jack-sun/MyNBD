<% @title="管理频道" %>
<%= require_slideShow %>

<% content_for :header_ad do %>
  <script type="text/javascript">
    BAIDU_CLB_preloadSlots("349118","350299","349119","347592");
  </script>
  <!-- 广告位：全站_顶部四分之三通栏 -->
  <%= render :partial => "ads/ad", :locals => { :id => "349118", :html_class => "header" } %>
<% end %>

<% cache(column_sub_nav_key_by_id(70)) do%>
<%= render :partial => "sub_nav", :locals => {:column_id => 70 } %>
<% end %>

<div class="layout">
  <div class="rCol rCol-home">
    <% cache(column_show_content_key_by_id(@featured[:id], true, "uniq")) do %>
    <%= render :partial => "media_wall", :layout => "story", :locals => { :story_css => "story-borderBlue story-nop", :header_data => {:list_title => "管理精选"}, :articles => articles_of(@featured), :column_id => column_id_of(@featured) } %>
    <% end %>

    <!-- 广告位：全站_右边栏一 -->
    <%= render :partial => "ads/ad", :locals => { :id => "349119", :html_class => "right_box" } %>

    <% cache(Article::HOT_ARTICLE_FRAGMENT_CACHE_KEY, :expire_in => 30*60) do %>
    <%= render :partial => "hot_articles_v3", :layout => "story", :locals => { :story_css => "story-borderOrange", :header_data => {:list_title => "热门文章"} } %>
    <% end %>

    <% cache("home_nbd_products") do %>
      <%= render :partial => "nbd_products" %>
    <% end %>
  </div>

  <div class="main">
    <div class="layout">
      <div class="lCol lCol-home">
        <% cache(column_show_content_key_by_id(@image_articles[:id])) do %>
        <%= render :partial => "image_articles", :layout => "story", :locals => { :story_css => "story-p1", :articles => articles_of(@image_articles)  } %>
        <% end %>
      </div>

      <div class="main">
        <% cache(column_show_content_key_by_id(@head_article[:id])) do %>
        <%= render :partial => 'column_breakingnews', :layout => 'story', :locals => { :articles => articles_of(@head_article) } %>
        <% end %>
      </div>
    </div>

    <div class="story_shadow">
      <div class="story">
        <div class="story_divide_l">
          <% cache(column_show_content_key_by_id(@career[:id])) do %>
            <%= render :partial => "article_list_v3", :layout => "story", :locals => { :story_is_hide => true, :header_data => {:list_title => "职场"}, :column_id => column_id_of(@career), :digest_number => 2, :articles => articles_of(@career) } %>
          <% end %>
        </div>
        <div class="story_divide_r">
          <% cache(column_show_content_key_by_id(@mba[:id])) do %>
            <%= render :partial => "article_list_v3", :layout => "story", :locals => { :story_is_hide => true, :header_data => {:list_title => "商学院"}, :column_id => column_id_of(@mba), :digest_number => 2, :articles => articles_of(@mba) } %>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- 广告位：全站_左通栏一 -->
    <%= render :partial => "ads/ad", :locals => { :id => "350299", :html_class => "left_bar" } %>

    <div class="story_shadow">
      <div class="story">
        <div class="story_divide_l">
          <% cache(column_show_content_key_by_id(@people[:id])) do %>
            <%= render :partial => "article_list_v3", :layout => "story", :locals => { :story_is_hide => true, :header_data => {:list_title => "人物"}, :column_id => column_id_of(@people), :digest_number => 2, :articles => articles_of(@people) } %>
          <% end %>
        </div>
        <div class="story_divide_r">
          <% cache(column_show_content_key_by_id(@front[:id])) do %>
            <%= render :partial => "article_list_v3", :layout => "story", :locals => { :story_is_hide => true, :header_data => {:list_title => "管理前沿"}, :column_id => column_id_of(@front), :digest_number => 2, :articles => articles_of(@front) } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 广告位：全站_底部通栏 -->
<%= render :partial => "ads/ad", :locals => { :id => "349120", :html_class => "footer" } %>


















