<div class="story_shadow">
  <div class="story story-borderOrange">
    <h3 class="story_hd">
      <div class="story_hd_opt">
        <div id="recommendNewsIndex" class="story_slideIndex">
          <a class="current" href="javascript:;">1</a>
          <a href="javascript:;">2</a>
          <a href="javascript:;">3</a>
        </div>
      </div>
      <%= link_to "推荐", column_url(5, :subdomain => SUBDOMAIN_EXP[WWW_EXP])%>
    </h3>
    <div class="story_bd">
      <div id="recommendNewsSlide">
        <%= render :partial => "article_list_v3", :locals => { :digest_number => 3, :articles => articles_of(@featured_articles), :display_children => true, :display_label => true, :digest_row => 2 } %>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $.nbdslide.init({
      optDOMs:[{
        selector:"#recommendNewsSlide ul",
        style:"normal"
      }],
      indexDOM:"#recommendNewsIndex"
    });
  </script>
</div>