      <% cache(column_show_content_key_by_id(@fashion[:id])) do %>
		<%= render :partial => "columns/article_list", :locals => {:list_title => "时尚", :articles => @fashion[:articles].map(&:article).compact, :column_id => 64, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
      <% end %>
      <% cache(column_show_content_key_by_id(@travel[:id])) do %>
		<%= render :partial => "columns/article_list", :locals => {:list_title => "探索", :articles => @travel[:articles].map(&:article).compact, :column_id => 65, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
      <% end %>
	</div>
	<div class="subRightCol">
      <% cache(column_show_content_key_by_id(@taste[:id])) do %>
		<%= render :partial => "columns/article_list", :locals => {:list_title => "奢侈品", :articles => @taste[:articles].map(&:article).compact, :column_id => 66, :digest_number => 3, :display_children => false, :digest_restrict => true } %>
