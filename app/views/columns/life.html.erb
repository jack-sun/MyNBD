<% @title="品味频道" %>
<%= require_css "channel.css" %>
<%= require_slideShow %>

<% content_for :header_ad do %>
	<script type="text/javascript">
		BAIDU_CLB_preloadSlots("349118","349119","347604");
	</script>
	<!-- 广告位：全站_顶部四分之三通栏 -->
