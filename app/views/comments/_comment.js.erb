<li id="weibo_comment_<%= comment.id %>">
	<%= link_to image_tag(user_avatar_path(comment.owner, :middle)), user_path(comment.owner), :class => "avatar" %>
	<div class="itemContent">
		<p><%= link_to comment.owner.nickname, user_path(comment.owner), :class => "nickname" %>: <%= comment.content %> </p>
		<div class="itemBottom">
			<span class="rf">
				<a href="javascript:void(0)" class="replyThisWeibo">回复</a>
				<% if @current_user and @current_user.is_same_user?(comment.owner) %>
					<span class="divider">|</span>
					<%=link_to "删除",[@weibo, comment], :method => :delete, :confirm => "确定删除这条评论？", :remote => true %>
				<%end%>
			</span>
			<span><%= nbd_time_f(comment.created_at) %></span>
		</div>
	</div>
</li>
