<div class="guestItem">
	<%= link_to image_tag(user_avatar_path(guest, :middle), :name => "userhead"), profile_user_path(guest), :class => "avatar" %>
	<span class="info">
		<% if @current_user.present? && @current_user.id == guest.id %>
		<span><%= guest.nickname %></span>
		<% else %>
		<%= link_to guest.nickname, profile_user_path(guest) %>
		<% end %>
	</span>
	<%= hidden_field_tag "live[guest_ids][]", guest.id %>
	<%= link_to "<span>删除</span>".html_safe, "javascript:void(0)", :class => "btnGray deleteGuest", :confirm => "你确认要删除？" %>
	<div class="clear"></div>
</div>
