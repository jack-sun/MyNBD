<%@title="帐号设置 - 微博帐号"%>
<%= require_css "account_settings.css" %>
<div class="leftCol">
	<div id="pageName"><h1>帐号设置</h1></div>
    <div class="tabs">
        <ul>
            <li>
                <%= link_to "基本信息", settings_user_url %>
            </li>
            <li>
                <%= link_to "修改密码", change_password_user_url %>
            </li>
            <li class="current">
                <%= link_to "绑定帐号", authentications_url %>
            </li>
        </ul>
    </div>

    <%if params[:notice] %>
		<div class="alert_done"><b></b><%= params[:notice] %></div>
	<%end %>
    <% if @accounts.size > 0 %>
      <% @accounts.each_with_index do |account, index| %>
        <p>
          <ul id="<%= account.provider %>">
            <li><%=  account.provider %></li>
            <li><%=  account.nickname %></li>
            <li><%=  link_to "接触绑定", account, :method => :destroy %></li>
          </ul>
        </p>
      <% end %>
    <% end %>
</div>
<div class="rightCol">
</div>
<div class="clear">
</div>
