<div class="sectionA">
	<div class="title">
		<h1>报纸管理-新建文章</h1>
		<span class="opts"><%= link_to "<span>取消</span>".html_safe, console_newspaper_path(@newspaper), :class => "btnGray" %>
		</span>
	</div>
	<div class="content rightColCenter">
		<%= form_tag create_article_console_newspaper_path(@newspaper), :class => "formA", :id => "newspaperArticleForm" do %>
		  <p>
		  <%= label_tag "title", "标题:" %>
		  <%= text_field_tag "title" %>
		  </p>
		  <p>
		  <%= label_tag "ori_author", "作者:" %>
		  <%= text_field_tag "ori_author" %>
		  </p>
		  <p>
		  <%= label_tag "date", "日期:" %>
		  <%= text_field_tag "date" %>
		  </p>
		  <p>
		  <%= label_tag "page", "版次:" %>
		  <%= text_field_tag "page" %>
		  </p>
		  <p>
		  <%= label_tag "section", "版名:" %>
		  <%= text_field_tag "section" %>
		  </p>
		  <p>
		  <%= label_tag "column", "栏目:" %>
		  <%= text_field_tag "column" %>
		  </p>
		  <p>
		  <%= label_tag "content", "正文:" %>
		  <%= text_area_tag "content" %>
		  </p>
		  <p>
		  <%= label_tag "list_title", "引题:" %>
		  <%= text_field_tag "list_title" %>
		  </p>
		  <p>
		  <%= label_tag "sub_title", "副题:" %>
		  <%= text_field_tag "sub_title" %>
		  </p>
		  <p>
		  <%= label_tag "ori_source", "稿件来源:" %>
		  <%= text_field_tag "ori_source" %>
		  </p>
      <p class="formRightAlign">
        <%= link_to "<span>提交</span>".html_safe, "javascript:void(0)", :onclick => "$(this).closest('form').submit();return false;", :class => "btnBlueM" %>
      </p>
		<% end %>
</div>
</div>



