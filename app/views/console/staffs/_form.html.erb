<%= form_for([:console,@staff],:html => {:class => "formA"}) do |f| %>
  <p>
    <%= f.label :name, "帐号:" %>
    <% unless @staff.new_record? %>
      <%= f.text_field :name ,:disabled => "disabled" %>帐号不能修改！
    <% else %>
      <%= f.text_field :name  %>
      <%= @staff.errors[:name].length ==0 ? '':@staff.errors[:name][0] %>
    <% end %>
  </p>
  <p>
    <%= f.label :real_name,'真实姓名:' %>
    <%= f.text_field :real_name %>
    <%= @staff.errors[:real_name].length ==0 ? '':@staff.errors[:real_name][0] %>
  </p>
<% if @staff.new_record? %>
  <p>
    <%= f.label :password,'登录密码:' %>
    <%= f.password_field :password %>
    <%= @staff.errors[:password].length ==0 ? '':@staff.errors[:password][0] %>
  </p>

  <p>
    <%= f.label :password,'确认密码:' %>
    <%= f.password_field :password_confirmation %>
    <%= @staff.errors[:password_confirmation].length ==0 ? '':@staff.errors[:password_confirmation][0] %>
  </p>

  <% end %>
  <p>
    <%= f.label :phone,'用户手机:' %>
    <%= f.text_field :phone %>
    <%= @staff.errors[:phone].length ==0 ? '':@staff.errors[:phone][0] %>
  </p>

  <p>
    <%= f.label :email,'电子邮箱:' %>
    <%= f.email_field :email %>
    <%= @staff.errors[:email].length ==0 ? '':@staff.errors[:email][0] %>
  </p>

  <p>
    <%= f.label :'用户类型:' %>
    <%= select("staff", "user_type" ,options_for_select({ "网站编辑" => "2", "网站编辑管理" => "1","网站技术管理" => "0" },"#{@staff.user_type}")) %>
  </p>
  <p>
    <%= f.label :'权限:' %>
    <%= check_box_tag("permissions[]","#{Staff::AUTHORITY_NEWS}",@staff.authority_of_news?,:id => "console_news")%>
    <%= label_tag 'console_news','新闻控制台',:class => "clearLabelStyle" %> 
    <%= check_box_tag("permissions[]","#{Staff::AUTHORITY_COMMUNITY}",@staff.authority_of_community?,:id =>"console_community") %>
    <%= label_tag 'console_community','社区控制台',:class => "clearLabelStyle" %> 
    <%= check_box_tag("permissions[]","#{Staff::AUTHORITY_COMMON}",@staff.authority_of_common?,:id => "console_common") %>
    <%= label_tag 'console_common','通用控制台',:class => "clearLabelStyle" %> 
    <%= check_box_tag("permissions[]","#{Staff::AUTHORITY_MOBILE_NEWS}", @staff.authority_of_mobile_news?,:id => "console_mobile") %>
    <%= label_tag 'console_mobile','手机控制台',:class => "clearLabelStyle" %> 
  </p>
	<br/>
	<p class="formRightAlign">
		<%= link_to "<span>提交</span>".html_safe, "javascript:void(0)", :onclick => "$(this).closest('form').submit();return false;", :class => "btnBlueM" %>
	</p>

<% end %>


