<%
  is_valid_premium_user = @current_user && @current_user.is_valid_premium_user?
  is_payed_premium_user = @current_user && @current_user.mn_account.try("payed?")
%>

<style type="text/css">
.tzbContainerTop { padding:2px 0 0 20px; height:50px; background:url(/images/tou_zi_bao/box_top_with_navigation.png) 0 0 no-repeat; }
.tzbInfo { float:none; width:auto; }
</style>

<% content_for :tzbHeader do %>
<div id="header">
  <div class="innerCenter">
    <% if false %><img id="tzbBanner" src="/images/tou_zi_bao/banner.jpg" alt="" /><% end %>
    <p id="quickIntro">
      <strong>《每日经济新闻》</strong>是一份全国发行、影响力巨大的财经类报纸。<br/>每经证券资讯产品由一个对证券市场经验丰富的研发团队专门负责开发，该团队成员有多年从事证券市场研究的券商高级研究员和高级投顾，有多年行业公司采访经验的高级记者、编辑，有多年征战股市战绩显著的私募高手，有对宏观经济和政策研究较深的专家学者。
    </p>
  </div>
</div>
<% end %>

<% content_for :tzbNav do %>
<ul class="tzbNav">
  <li class="current"><%= link_to "每经投资宝", introduce_premium_mobile_newspaper_account_url %></li>
  <li><%= link_to "股东大会实录", Settings::gms_articles_features_url %></li>
  <li><%= link_to "每经投资快讯", introduce_premium_mobile_news_index_url %></li>
</ul>
<% end %>

<div class="tzbLeftColumn">
  <div class="tzbSideNav">
    <img src="/images/tou_zi_bao/touzibao_logo.png" alt="每经投资宝" />
    <ul>
      <% if is_payed_premium_user %>
      <li><%= link_to "<b class='user'></b>账号信息".html_safe, premium_mobile_newspaper_account_url %></li>
      <% else %>
      <li><%= link_to "<b class='buy'></b>立刻购买".html_safe, new_premium_mobile_newspaper_account_url %></li>
      <li><%= link_to "<b class='card'></b>卡号激活".html_safe, new_premium_mobile_newspaper_account_url + "?type=1" %></li>
